{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": [
			"es2017", "dom"
		],
		"allowJs": false,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"noImplicitUseStrict": true,
		"outDir": "dist",
		"declaration": false
	},
	"include": [
		"./src/**/*",
		"./test/**/*"
	]
}